string amendSentence (string s)
    {
        // your code here
        int n=s.length();
        string ans="";
        if(s[0]>='A'&&s[0]<='Z')
        ans+=s[0]+32;
        else
        ans+=s[0];
        for(int i=1;i<n;i++)
        {
            if(s[i]>='A'&&s[i]<='Z')
            {
               ans+=" ";
               ans+=s[i]+32;
            }
            else
            {
                ans+=s[i];
            }
        }
        return ans;
    }
